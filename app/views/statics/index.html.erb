<div id="wrapper">
  <%= render 'shared/header'%>
  <div>
    <div class="col-md-6 col-xs-12 padding_zero">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <img src="http://lorempixel.com/400/200/" alt="Los Angeles" style="width:100%;">
            <div class="carousel-caption">
              <h3>Peli - 1</h3>
              <p>...is always so much fun!</p>
            </div>
          </div>

          <div class="item">
            <img src="http://lorempixel.com/400/200/" alt="Chicago" style="width:100%;">
            <div class="carousel-caption">
              <h3>Peli - 2</h3>
              <p>...is always so much fun!</p>
            </div>
          </div>

          <div class="item">
            <img src="http://lorempixel.com/400/200/" alt="New york" style="width:100%;">
            <div class="carousel-caption">
              <h3>Peli - 3</h3>
              <p>...is always so much fun!</p>
            </div>
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="one_column hidden-xs hidden-sm">
      <img class="img-responsive" src="http://lorempixel.com/400/402/" alt="">
    </div>
    <div class="one_column hidden-xs hidden-sm">
      <img class="img-responsive" src="http://lorempixel.com/400/402/" alt="">
    </div>
  </div>
  <div class="clear">
    <hr>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= render 'peliculas/index' %>
    </div>
  </div>
  <%= render 'shared/footer'%>
</div>
